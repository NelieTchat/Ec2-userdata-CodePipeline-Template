
    pipeline {
        agent any
        environment {1'
        DOCKER_CREDENTIALS_ID = 'Elora'
        DOCKER_IMAGE_TAG = 'Eliel'
        DOCKER_IMAGE_NAME = 'notes-app/latest'
        DOCKER_IMAGE_REGISTRY = 'https://index.docker.io/v1/'
    }

        stages {
            stage('Clone Code') {
                steps {
                    echo 'Cloning the code'

                    git url: "https://github.com/NelieTchat/CFN_Jenkins_Project.git", branch: "staging"
                }
            }
            stage('Build') {
                steps {
                    echo 'This is Build Stage'  //this is the build stage
                    sh "docker build -t notes-app ." //this will build the docker image
                }
            }
            stage('Push to Docker hub') {
                steps {
                    echo 'Pushing image to dockerhub'
                    withCredentials([usernamePassword(credentialsId:"dockerhub-login",passwordVariable:"dockerhubpass",usernameVariable:"dockerhubuser" )]){
                    sh "docker tag notes-app ${env.dockerhubuser}/notes-app:latest"
                    sh "docker login -u ${env.dockerhubuser} -p ${env.dockerhubpass}" 
                    sh "docker push ${env.dockerhubuser}/notes-app:latest"
                    }

                }
            }
            stage('Deployement') {
                steps {
                    echo 'Deploying container'
                    sh "docker-compose down && docker-compose up -d"
                }
            }
        }
    }